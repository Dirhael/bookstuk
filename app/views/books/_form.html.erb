<%= simple_form_for(@book, html: {class: 'form-signin'}) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name, required: true, label: false, placeholder: 'Title', autofocus: true, input_html: {class: 'form-control'} %>
    <%= f.input :author, required: true, label: false, placeholder: 'Author name', input_html: {class: 'form-control'} %>
    <%= f.input :description, required: true, label: false, placeholder: 'Description', input_html: {class: 'form-control', rows: 5} %>
    <br>
    <%= f.input :price, required: true, label: false, placeholder: 'Price', input_html: {class: 'form-control'} %>

    <div class="checkbox text-center">
      <p>Availability</p>
      <%= f.input :availability, label:false %>G
    </div>
    <%= f.button :submit, class: 'btn btn-primary btn-block' %>

<% end %>