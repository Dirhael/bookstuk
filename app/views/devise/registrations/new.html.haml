= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f|
  %h2.text-center Sign up
  = f.error_notification
  = f.input :email, required: true, label: false, autofocus: true, input_html: {class: 'form-control'}, placeholder: 'E-mail Address'
  = f.input :password, required: true, label: false, input_html: {class: 'form-control'}, placeholder: 'Password', hint: ("#{@minimum_password_length} characters minimum" if @validatable)
  = f.input :password_confirmation, required: true, label: false, input_html: {class: 'form-control'}, placeholder: 'Password Confirmation'
  = f.button :submit, 'Sign up', class: 'btn btn-primary btn-block'
  = render "devise/shared/links"
