= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, class: 'form-signin'}) do |f|
  %h2.text-center
    Edit #{resource_name.to_s.humanize}
  = f.error_notification
  = f.input :email, required: true, autofocus: true, label: false, input_html: {class: 'form-control'}, placeholder: 'E-mail Address'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %p
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  = f.input :password, autocomplete: 'off', label: false, input_html: {class: 'form-control'}, placeholder: 'Password', hint: "leave it blank if you don't want to change it", required: false
  = f.input :password_confirmation, required: false, label: false, input_html: {class: 'form-control'}, placeholder: 'Password Confirmation'
  = f.input :current_password, hint: 'we need your current password to confirm your changes', required: true, label: false, input_html: {class: 'form-control'}, placeholder: 'Current Password'
  = f.button :submit, 'Update', class: 'btn btn-primary btn-block'
  %h3 Cancel my account
  %p
    Unhappy? #{link_to 'Cancel my account', registration_path(resource_name), data: {confirm: 'Are you sure?'}, method: :delete}
  = link_to "Back", :back
