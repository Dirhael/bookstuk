<table class="table table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Price</th>
    <th>Availability</th>
  </tr>
  </thead>
  <% @books.each do |book| %>
      <tr>
        <td><%=link_to book.name, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.availability %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
      </tr>
  <% end %>
</table>