<div class="row">
  <h1 class="text-center">Dashboard</h1>
  <div class="col-md-4">
    <h3 class="text-center">Books <%= link_to 'New Book', new_book_path, class: 'btn btn-primary btn-sm' %> </h3>
    <table class="table table-condensed">
      <thead>
      <tr>
        <th>Name</th>
        <th>Author</th>
        <th>Price</th>
        <th>Availability</th>
      </tr>
      </thead>
      <% @books.each do |book| %>
          <tr>
            <td><%=link_to book.name, book_path(book) %></td>
            <td><%= book.author %></td>
            <td><%= book.price %></td>
            <td><%= book.availability %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
          </tr>
      <% end %>
    </table>
  </div>

  <div class="col-md-4">
    <h3 class="text-center">Purchased</h3>

  </div>

  <div class="col-md-4">
    <h3 class="text-center">Sales</h3>
  </div>
</div>